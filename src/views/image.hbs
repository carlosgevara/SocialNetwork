{{!-- CARD OF IMGAE --}}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
        <h4>{{imageFind.title}}</h4>
        <button class="btn btn-danger" id="btn-delete" data-id="{{uniqueId}}">
            <i class="fas fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{imageFind.description}}</p>
        <div class="text-center">
            <img src="/public/uploads/{{imageFind.filename}}" alt="img db" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{imageFind.filename}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            <span class="likes-count">{{imageFind.likes}}</span>
            <i class="fas fa-heart"></i>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{imageFind.views}}
        </p>
        <p>
            <i class="far fa-clock"></i> {{timeago imageFind.date}}
        </p>
    </div>
</div>

{{!--  --}}
{{!-- CARD OF COMMENT --}}
<div class="card mt-3">
    <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
        <h4>Comments</h4>
        <button class="btn btn-info" id="btn-show-comment">Comment</button>
    </div>
    <div class="card-body">
        <blockquote>
            <form action="/image/{{imageFind.uniqueId}}/comment" method="post">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group">
                    <textarea name="comment" class="form-control" placeholder="Comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        Send Comment
                    </button>
                </div>
            </form>
        </blockquote>
        {{!-- list of comments --}}
        <ul class="list-group-item">
            {{#each commentFind}}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col text-center">
                        <img src="https://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="icono img">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} --- {{timeago date}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>